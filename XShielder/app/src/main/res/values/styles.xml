<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- base application theme -->
    <style name="AppTheme" parent="XUITheme.Phone">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle_customised</item>
        <item name="colorPrimary">@color/app_themeColour</item>
        <item name="colorPrimaryDark">@color/app_themeColour</item>
        <item name="md_btn_positive_selector">@drawable/dialogue_button_selector</item>
        <item name="md_btn_negative_selector">@drawable/dialogue_button_selector</item>
        <item name="preferenceCategoryStyle">@style/PreferenceCategoryStyle</item>
        <item name="preferenceStyle">@style/PreferenceStyle</item>
        <item name="switchPreferenceStyle">@style/SwitchPreferenceStyle</item>
        <item name="xui_common_list_item_detail_h_text_size">@dimen/default_content_text_size</item>
        <item name="xui_common_list_item_title_h_text_size">@dimen/default_primary_text_size</item>
        <item name="xui_config_color_background">@color/app_themeColour</item>
        <item name="XUICommonListItemViewStyle">@style/XUIListStyle_customised</item>
        <item name="XUIGroupListSectionViewStyle">@style/XUIListStyle_customised</item>
    </style>

    <!-- application theme of the action bar overlay -->
    <style name="AppTheme.ActionBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="colorControlNormal">@color/primaryTextColour</item>
    </style>

    <!-- application theme of the pop-up widget overlay -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="ButtonTextStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colourInfo</item>
        <item name="android:textSize">@dimen/default_explanation_text_size</item>
    </style>

    <!-- the style of the circle progress views -->
    <style name="CircleProgressViewStyle">
        <item name="cpv_circle_broken">false</item>
        <item name="cpv_end_color">@color/circleProgressView_progressColour_end</item>
        <item name="cpv_end_progress">100</item>
        <item name="cpv_isFilled">false</item>
        <item name="cpv_isTracked">true</item>
        <item name="cpv_progress_textColor">@color/primaryTextColour</item>
        <item name="cpv_progress_textSize">50sp</item>
        <item name="cpv_progress_width">20dp</item>
        <item name="cpv_start_color">@color/circleProgressView_progressColour_start</item>
        <item name="cpv_start_progress">0</item>
        <item name="cpv_track_color">@color/circleProgressView_trackColour</item>
        <item name="cpv_track_width">@dimen/medium_interval</item>
    </style>

    <!-- the style of text views for contents -->
    <style name="ContentTextViewStyle">
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:textColor">@color/contentTextColour</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/default_content_text_size</item>
    </style>

    <!-- the style of text views for headers -->
    <style name="HeaderTextViewStyle" parent="TextShadowStyle">
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:textColor">@color/primaryTextColour</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/default_primary_text_size</item>
    </style>

    <!-- the style of the nested scroll views -->
    <style name="NestedScrollViewStyle">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- the style of the preference categories -->
    <style name="PreferenceCategoryStyle" parent="Preference.Category">
        <item name="android:layout">@layout/customised_preference_category</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <!-- the style of the preferences -->
    <style name="PreferenceStyle" parent="Preference">
        <item name="android:layout">@layout/customised_preference</item>
        <item name="allowDividerBelow">false</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <!-- the style of the round buttons -->
    <style name="RoundButtonStyle" parent="RoundButton.Blue">
        <!-- the attribute fitsSystemWindows needs setting to "false" to avoid an issue that padding has no effect on some devices -->
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/default_primary_text_size</item>
        <item name="rb_backgroundColor">@drawable/round_button_background_selector</item>
        <item name="rb_isRadiusAdjustBounds">true</item>
    </style>

    <!-- the style of the text views for sections -->
    <style name="SectionTextViewStyle" parent="TextShadowStyle">
        <item name="android:shadowColor">@color/colourInfo</item>
        <item name="android:textColor">@color/colourInfo</item>
        <item name="android:textSize">@dimen/default_section_text_size</item>
    </style>

    <!-- the style of the super buttons -->
    <style name="SuperButtonStyle">
        <item name="android:drawablePadding">20dp</item>
        <!-- the attribute fitsSystemWindows needs setting to "false" to avoid an issue that padding has no effect on some devices -->
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/primaryTextColour</item>
        <item name="android:textSize">@dimen/default_primary_text_size</item>
        <item name="sCornersRadius">15dp</item>
        <item name="sGravity">right</item>
        <item name="sSolidColor">@color/card_backgroundColour</item>
    </style>

    <!-- the style of the switch preferences -->
    <style name="SwitchPreferenceStyle" parent="Preference.SwitchPreference">
        <item name="android:layout">@layout/customised_preference</item>
        <item name="android:widgetLayout">@layout/customised_preference_widget_switch</item>
        <item name="allowDividerBelow">false</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <!-- the style of text shadows -->
    <style name="TextShadowStyle">
        <item name="android:shadowColor">@color/primaryTextColour</item>
        <item name="android:shadowDx">@dimen/text_shadow_config</item>
        <item name="android:shadowDy">@dimen/text_shadow_config</item>
        <item name="android:shadowRadius">@dimen/text_shadow_config</item>
    </style>

    <!-- the style of toolbars -->
    <style name="ToolbarStyle">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme.ActionBarOverlay</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <!-- the style of the text views added to toolbars -->
    <style name="ToolbarTextViewStyle" parent="TextShadowStyle">
        <item name="android:textColor">@color/primaryTextColour</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
    </style>

    <!-- the style of the XUI linear layout -->
    <style name="XuiLinearLayoutStyle">
        <item name="android:background">@color/card_backgroundColour</item>
        <item name="xui_hideRadiusSide">bottom</item>
        <item name="xui_radius">30dp</item>
        <item name="xui_showBorderOnlyBeforeL">false</item>
    </style>

    <!-- the style of the text views showing rationales -->
    <style name="RationaleTextViewStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryTextColour</item>
        <item name="android:textSize">@dimen/default_primary_text_size</item>
    </style>

    <!-- the customised window animation style of switching between activities -->
    <style name="WindowAnimationStyle_customised" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <!-- the customised list style of some XUI widgets -->
    <style name="XUIListStyle_customised">
        <!-- the attribute fitsSystemWindows needs setting to "false" to avoid an issue that padding has no effect on some devices -->
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="xui_commonList_titleColor">@color/primaryTextColour</item>
        <item name="xui_commonList_detailColor">@color/contentTextColour</item>
    </style>
</resources>