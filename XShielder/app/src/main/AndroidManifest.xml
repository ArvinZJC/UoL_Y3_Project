<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.arvinzjc.xshielder">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- the home activity -->
        <activity android:name=".ActivityHome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- the activity of the Wi-Fi security detector -->
        <activity
            android:name=".ActivityWifi"
            android:label="@string/activityWifi_title"
            android:parentActivityName=".ActivityHome">
        </activity>

    </application>
</manifest>